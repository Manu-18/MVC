@model IEnumerable<MVC.Models.Student>

<!DOCTYPE html>
<html>
<head>
    <base href="https://demos.telerik.com/kendo-ui/listview/index">
    <style>
        html {
            font-size: 14px;
            font-family: Arial, Helvetica, sans-serif;
        }</style>
    <title></title>
    <link href="https://kendo.cdn.telerik.com/themes/6.7.0/default/default-main.css" rel="stylesheet" />
    <script src="https://kendo.cdn.telerik.com/2023.2.829/js/jquery.min.js"></script>


    <script src="https://kendo.cdn.telerik.com/2023.2.829/js/kendo.all.min.js"></script>



</head>
<body>
    <div >
        <div id="example">
        </div>


        
        <div id="listView"></div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        <script type="text/x-kendo-template" id="template">
            <div class="product">
               
                <h3>#:id#</h3>
                <h3>#:name#</h3>
                <h3>#:standard#</h3>

                
            </div>
        </script>

        <script>
            
            
            $(function () {
                $("#listView").kendoListView({
                    dataSource: {
                        data: @Html.Raw(Json.Serialize(Model)),
                        pageSize: 5
                    },
                    template: kendo.template($("#template").html()),
                    pageable: true
                });
            });
        </script>

        <style>
            #listView {
                padding: 10px 5px;
                margin-bottom: -1px;
                min-height: 510px;
                /* Avoid cutout if font or line is bigger */
                font: inherit;
                
            }

            .k-listview-content {
                overflow: hidden;
            }

            .product {
                float: left;
                position: relative;
                width: 111px;
                height: 170px;
                margin: 5px 5px;
                padding: 30px;
                background-color: #d099de;
                border:solid;
                border-radius:10px;
                color: black;
            }

                .product img {
                    width: 110px;
                    height: 110px;
                }

                .product h3 {
                    margin: 0;
                    padding: 3px 5px 0 0;
                    max-width: 96px;
                    overflow: hidden;
                    line-height: 1.1em;
                    font-size: .9em;
                    font-weight: normal;
                    text-transform: uppercase;
                    color: black;
                }

                .product p {
                    visibility: hidden;
                }
                h3{
                    color:black;
                }
                .product:hover p {
                    visibility: visible;
                    position: absolute;
                    width: 110px;
                    height: 110px;
                    top: 0;
                    margin: 0;
                    padding: 0;
                    line-height: 110px;
                    vertical-align: middle;
                    text-align: center;
                    color: #fff;
                    background-color: rgba(0,0,0,0.75);
                    transition: background .2s linear, color .2s linear;
                    -moz-transition: background .2s linear, color .2s linear;
                    -webkit-transition: background .2s linear, color .2s linear;
                    -o-transition: background .2s linear, color .2s linear;
                }

            .k-listview:after {
                content: ".";
                display: block;
                height: 0;
                clear: both;
                visibility: hidden;
            }

            #main {
                background-color: black;
                color: white;
            }
        </style>
    </div>



</body>
</html>
